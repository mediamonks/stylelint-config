{
  "name": "@mediamonks/stylelint-config",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "stylelint": "lerna run stylelint",
    "stylelint:fix": "lerna run stylelint:fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@mediamonks/eslint-config": "^2.0.3",
    "@mediamonks/prettier-config": "^1.0.1",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "lerna": "^6.0.3",
    "lint-staged": "^13.0.3",
    "nx": "^16.0.1",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": "@mediamonks/prettier-config",
  "lint-staged": {
    "*.{js,jsx,scss,css,md,json}": "prettier --write",
    "*.{js,jsx}": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@mediamonks/eslint-config",
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    }
  }
}
